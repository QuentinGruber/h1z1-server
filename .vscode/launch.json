    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch echo",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/benchmarks/out/echo/echo-server-start.js",
            "outFiles": [
                "${workspaceFolder}/benchmarks/out/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch ZoneServer",
            "env":{
                "VSCODE_DEBUG":"true",
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/out/servers/ZoneServer2015/zoneserver.js",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch ZoneServer with MongoDB",
            "env":{
                "VSCODE_DEBUG":"true",
                "MONGO_URL":"mongodb://localhost:27017/",
                "LOGINSERVER_IP":"127.0.0.1"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/out/servers/ZoneServer2015/zoneserver.js",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch LoginServer",
            "env":{
                "VSCODE_DEBUG":"true"    
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/out/servers/LoginServer/loginserver.js",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch LoginServer with MongoDB",
            "env":{
                "VSCODE_DEBUG":"true",
                "MONGO_URL":"mongodb://localhost:27017/"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/out/servers/LoginServer/loginserver.js",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch ZoneServer2016",
            "env":{
                "VSCODE_DEBUG":"true",
                "CLIENT_SIXTEEN":"true"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/out/servers/ZoneServer2016/zoneserver.js",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch ZoneServer2016 with MongoDB",
            "env":{
                "VSCODE_DEBUG":"true",
                "CLIENT_SIXTEEN":"true",
                "MONGO_URL":"mongodb://localhost:27017/",
                "LOGINSERVER_IP":"127.0.0.1"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/out/servers/ZoneServer2016/zoneserver.js",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        }
    ]
}